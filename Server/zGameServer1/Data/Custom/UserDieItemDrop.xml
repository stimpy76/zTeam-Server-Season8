<?xml version="1.0" encoding="utf-8"?><!--//===================================================================================// zGameServer// ----------------------------------------------------------------------------------// Description: User die item drop rate settings// ----------------------------------------------------------------------------------// Revision: 	7:12 04.04.2014//===================================================================================--><userdieitemdrop>	<!-- 	enabled:	Drop item from user	minpklevel:	Min. PK level of user for item drop	{		Hero:		1		Commoner:	2		Normal:		3		Outlaw 0:	4		Outlaw 1:	5		Outlaw 2:	6	}	rate:		Item drop rate (N / 10000)	-->	<pvp enabled="1" minpklevel="4" rate="5000"/>	<!-- Killer is user -->	<pvm enabled="0" minpklevel="4" rate="2000"/>	<!-- Killer is monster -->	<!-- Common options -->	<common>		<maplist>0</maplist>		<!-- Item drop only on map from list (0: Disabled, 1: Enabled) -->		<maxitem>1</maxitem>		<!-- Max item count for one death (from 0 to ~237) -->	</common>	<!-- Drop roll rules -->	<dropslots>		<inventory>0</inventory>	<!-- Drop items from inventory, not equipment (0: Disabled, 1: Enabled) -->		<weapon>1</weapon>			<!-- Drop items from weapons slots (0: Disabled, 1: Enabled) -->		<equipment>1</equipment>	<!-- Drop items from equipment slots (armor, pants...) (0: Disabled, 1: Enabled) -->		<wings>1</wings>			<!-- Drom items from wings slot (0: Disabled, 1: Enabled) -->		<pet>1</pet>				<!-- Drop items from pet slot (0: Disabled, 1: Enabled) -->		<accessory>1</accessory>	<!-- Drop items from accessories slots (0: Disabled, 1: Enabled) -->	</dropslots>	<!-- Map list (if enabled), id: Map number -->	<maplist>		<map id="6"/>				<!-- Arena -->	</maplist>	</userdieitemdrop>